<h1>Welcome to Electronic Gadgets Collection</h1>
<p class="alert">Once signed up, you can have your own gadgets online!</p>

<% if user_signed_in? %>
  <%= link_to 'Sign out', sign_out_path, method: :delete, class: 'btn btn-danger' %>
  <%= link_to 'See your gadgets', gadgets_path, class: 'btn btn-primary' %>
<% else %>
  <%= link_to 'Sign up', sign_up_path %> or <%= link_to 'Sign in', sign_in_path %>
<% end %>
